                .invitation__location--text{
                    font: normal normal normal 18px/33px Poppins;
                }
                .instructions{
                    padding-left: 50px;
                    padding-right: 50px;
                }
                .social{
                    width: 100%;
                }
                .credentials{
                    width: 90% !important;
                    margin-right: 3px;
                }
                .invitation__location--title{
                    margin-top: 80px !important;
                }
                .platform{
                    height: 240px !important;
                }
                .header{
                    display: none !important;
                }
                .header_small{
                    display: flex !important;
                }
                .invitation__location--text{
                    margin-top: 40px;
                }
                .indications{
                    width: 306px !important;
                }
                .content_credentials{
                    height: 185px !important;
                }
            }
            

